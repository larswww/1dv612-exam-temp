<div class="container">
    <h2>Settings</h2>

    <div class="row">

        <div class="col-md-8">
            <!--Notification activation buttons-->
            <!--<div class="container">-->
            <div class="row">
                <div class="col">
                    <button class="btn btn-default">Desktop</button>
                </div>
                <div class="col">
                    <button class="btn btn-default">Slack</button>
                </div>
                <div class="col">
                    <button class="btn btn-default">Android</button>
                </div>
                <div class="col">
                    <button class="btn btn-default">iOS</button>
                </div>
                <div class="col">
                    <button class="btn btn-default">E-mail</button>
                </div>
            </div>

            <div class="row">

                <form>
                    <p>Controls which notifications you recieve for activated channels.</p>
                    <select class="form-control form-control-lg" aria-describedby="orgSelect">

                       {{#each git.orgs}}

                           {{#if (subOrNot this ../prefs.subscriptions)}}
                               <!--adds a check if already subscribed-->
                               <option>{{this.login}} <i class="fa fa-check"></i></option>

                           {{else}}

                               <option>{{this.login}}</option>

                               <li><a href="#{{this.login}}" data-toggle="tab">{{this.login}}</a></li>
                           {{/if}}

                       {{/each}}

                    </select>
                    <small id="orgSelect" class="form-text text-muted">Set for all organisations at once or
                        individually
                    </small>
                </form>

                <div class="card">
                    <div class="card-header">Presets</div>

                    <dl class="row">
                        <dt class="col-sm-3">All</dt>
                        <dd class="col-sm-9">Will send you notifications for any event within selected organisation.</dd>

                        <dt class="col-sm-3">Project management</dt>
                        <dd class="col-sm-9">Events related to project management. </dd>

                        <dt class="col-sm-3">Programmer</dt>
                        <dd class="col-sm-9">Changes & additions to code. </dd>
                    </dl>

                    <div class="btn-group" role="group" aria-label="Basic example">
                        <button type="button" class="btn btn-secondary">All</button>
                        <button type="button" class="btn btn-secondary">Project management</button>
                        <button type="button" class="btn btn-secondary">Programmer</button>
                    </div>

                </div>
            </div>


            <div class="row">

                <div class="card">
                    <div class="card-header">Customize</div>

                    <form>
                        <!--iterates the payloadTypesAndSamples.js via handlebars helper. -->
                        {{#each events}}
                            <div class="form-check">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" id="{{this}}" value="{{this}}">
                                    {{this.desc}}
                                </label>
                            </div>
                        {{/each}}

                    </form>

                </div>
            </div>

            <button type="button" class="btn btn-primary btn-lg btn-block">Update Settings</button>
        </div>



        <div class="col-md-4">

            <img src="img/gravatar.jpg" class="rounded">

            <ul>
                <li>Organisations:</li>
                <li>Repositories:</li>
                <li><a href="#">Github Profile</a></li>

            </ul>

            <button class="btn btn-danger">Logout</button>


        </div>
    </div>
</div>
</div>
</div>